{
  "name": "my-vue-app",
  "version": "0.0.0",
  "scripts": {
    "dev": "vite",
    "build:dev": "vuedx-typecheck . && vite build --mode dev",
    "build:uat": "vuedx-typecheck . && vite build --mode uat",
    "build:prd": "vuedx-typecheck . && vite build --mode prd",
    "build:stage": "vuedx-typecheck . && vite build --mode stage",
    "serve": "vite preview",
    "commit": "git-cz",
    "precommit": "lint-staged",
    "prepare": "husky install"
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.ts?(x)": [
      "prettier --write",
      "eslint --fix",
      "git add"
    ],
    "src/**/*.js": [
      "prettier --write",
      "git add"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "dependencies": {
    "axios": "^0.21.1",
    "element-plus": "^1.0.2-beta.32",
    "gds-kit": "^0.1.4",
    "postcss-px-to-viewport": "^1.1.1",
    "vue": "^3.0.5",
    "vue-router": "^4.0.4",
    "vuex": "^4.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.0.1",
    "@commitlint/config-conventional": "^12.0.1",
    "@types/node": "^14.14.31",
    "@typescript-eslint/eslint-plugin": "^4.19.0",
    "@typescript-eslint/parser": "^4.19.0",
    "@vitejs/plugin-vue": "^1.1.4",
    "@vue/compiler-sfc": "^3.0.5",
    "@vuedx/typecheck": "^0.6.0",
    "@vuedx/typescript-plugin-vue": "^0.6.0",
    "autoprefixer": "^10.2.4",
    "commitizen": "^4.2.3",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^7.22.0",
    "eslint-config-standard": "^16.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^4.3.1",
    "eslint-plugin-vue": "^7.8.0",
    "husky": "^5.2.0",
    "less": "^4.1.1",
    "lint-staged": "^10.5.4",
    "postcss": "^8.2.6",
    "pre-commit": "^1.2.2",
    "sass": "^1.32.8",
    "stylus": "^0.54.8",
    "typescript": "^4.1.3",
    "vite": "^2.0.2",
    "vite-plugin-imp": "^2.0.4"
  }
}
